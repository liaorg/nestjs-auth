{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "tsConfigPath": "tsconfig.build.json",
        "assets": [{ "include": "i18n/**/*", "watchAssets": true }],
        "plugins": [
            {
                "name": "@nestjs/swagger",
                "options": { "introspectComments": true }
            }
        ]
    }
}
